
@{
    ViewBag.Title = "Giris";
}

@model  iRestaurant.Models.PersonelHesapViewModel
<!doctype html>
<html style="background-color:#222D32;">
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="windows-1254" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/yonetim/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/yonetim/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/yonetim/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/yonetim/plugins/iCheck/flat/blue.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="/yonetim/plugins/morris/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="/yonetim/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="/yonetim/plugins/datepicker/datepicker3.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/yonetim/plugins/daterangepicker/daterangepicker.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="/yonetim/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>iRestaurant Kasa</b>iR-K</a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Panele ulaşmak için giriş yapınız.</p>
                <form action="/Mutfak/YoneticiGiris" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="full-row">
                        <label for="email-id">Şirket Email:</label>
                        <input class="form-control" type="text" name="sirketEmail" id="sirketEmail" placeholder="Şirket Email" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="full-row">
                        <label for="email-id">Personel Email:</label>
                        <input class="form-control" type="text" name="personelEmail" id="personelEmail" placeholder="Personel Email" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="full-row">
                        <label for="email-id">Parola:</label>
                        <input class="form-control" type="password" name="personelParola" id="personelParola" placeholder="Personel Şifre" />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <input type="text" hidden="hidden" name="returnUrl" id="returnUrl" readonly="readonly" value="@if (Url.RequestContext.HttpContext.Request.Url.Query.ToString().Length==0){}else{<text>@Url.RequestContext.HttpContext.Request.Url.Query.Substring(11).Split('&')[0].ToString()</text>}" />
                    <div class="full-row">
                        <div class="submit_field">
                            <br>
                            <strong style="color:red; float:left; width:50%;">@TempData["Mesaj"]</strong>
                            <input class="btn btn-primary btn-block btn-flat form-control" type="submit" onclick="" value="Giriş Yap">
                        </div>
                    </div>
                </form>
            </div>
            <div class="login-box-body">
                <!-- /.login-box-body -->
                <footer class="Footer bg-dark dker">
                    <p>@DateTime.Now.Year &copy; <a>Sirus Yazılım<i class="fa fa-world"></i></a></p>
                </footer>
                <!-- /#footer -->
            </div>
        </div>
        <!-- /#wrap -->
    </div>

    <!-- jQuery 2.2.3 -->
    <script src="/assets/lib/jquery.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
    $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.6 -->
    <script src="/yonetim/bootstrap/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="/yonetim/plugins/morris/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="/yonetim/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="/yonetim/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="/yonetim/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="/yonetim/plugins/knob/jquery.knob.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="/yonetim/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="/yonetim/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="/yonetim/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="/yonetim/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/yonetim/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="/yonetim/dist/js/app.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="/yonetim/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/yonetim/dist/js/demo.js"></script>
    
    
</body>
</html>
