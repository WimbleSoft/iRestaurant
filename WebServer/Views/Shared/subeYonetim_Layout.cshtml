<script>
function ayarlarGuncelle(item) {
    var array = item.split('_');
    var personelAd = $('#personelAd_id_' + array[2]);
    var personelParola = $('#personelParola_id_' + array[2]);
    var personelEmail = $('#personelEmail_id_' + array[2]);
    var personelTelefon = $('#personelTelefon_id_' + array[2]);
    if (personelAd != "" && personelEmail != "" && personelTelefon !=""){
        $.ajax({
            url: '/Kasa/AyarlarGuncelle',
            type: 'POST',
            dataType: 'json',
            contentType: "application/json",
            data: JSON.stringify({ personelAd: personelAd, personelParola: personelParola, personelEmail: personelEmail, personelId: array[2], personelTelefon: personelTelefon }),
            success: function (data) {
                if (data == 2) {
                    alert("Şifreniz en az 8, en çok 20 karakter olmalıdır.")
                }
                else if (data == 0) {
                    window.location.reload();
                }
                else {
                    alertLoginHatasi();
                }
            }
        });
    }
    else {
        alertAlanDoldur();
    }
    
}
